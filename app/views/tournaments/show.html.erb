  <% @tournament.draws.each do |d| %>
    <div class="row">
      <div class="col-md-2 text-center">
        <h4><%= link_to "#{d.name}", tournament_draw_path(tournament_id: @tournament.id,
                                                          id: d.id), class: "draw" %></h4>
      </div>
      <div class="col-md-10 back-white" id="frames<%= d.id %>">
        <!-- <iframe src="<%= tournament_draw_path(tournament_id: @tournament.id, id: d.id) %>"></iframe> -->
        <script>
          $( "#frames<%= d.id %>" ).load( "<%= tournament_draw_path(tournament_id: @tournament.id, id: d.id) %> #tournament" );
        </script>
      </div>
    </div>
