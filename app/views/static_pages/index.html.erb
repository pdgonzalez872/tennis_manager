<div class="block">
  <div id="carousel-generic" class="carousel slide">
    <ol class="carousel-indicators hidden-xs">
      <li data-target="#carousel-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-generic" data-slide-to="1"></li>
      <li data-target="#carousel-generic" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
      <div class="item active">
        <img class="img-responsive img-full" src="<%= asset_path( 'tennis_background_lowres.jpg' ) %>" />
      </div>
      <div class="item">
        <img class="img-responsive img-full" src="<%= asset_path( 'tennis-court-background.jpg' ) %>" />
      </div>
      <div class="item">
        <img class="img-responsive img-full" src="<%= asset_path( 'andy-murray-tennis-player-high-definition-wallpaper.jpg' ) %>">
      </div>
    </div>
      <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
        <i class="glyphicon glyphicon-chevron-left"></i>
      </a>
      <a class="right carousel-control" href="#carousel-generic" data-slide="next">
         <i class="glyphicon glyphicon-chevron-right"></i>
      </a>
    </div>
  </div>
  <div class="overlay">
    <h1>PADDLE</h1>
  </div>
</div>

<br>
<br>
<br>

<div class="container text-center features">
  <div class="col-centered hidden-xs hidden-sm">
    <div class="clip-path right">
      <div class="content">
        <i class='glyphicon glyphicon-knight'></i>
        <br>
        <br>
        <button class="btn btn-primary outline"><%= link_to "Tournaments", tournaments_path %></button>
      </div>
    </div>
    <div class="clip-path both">
      <div class="content">
        <i class='glyphicon glyphicon-user'></i>
        <br>
        <br>
        <button class="btn btn-primary outline"><%= link_to "Players", players_path %></button>
      </div>
    </div>
    <div class="clip-path left">
      <div class="content">
        <i class='glyphicon glyphicon-globe'></i>
        <br>
        <br>
        <button class="btn btn-primary outline"><%= link_to "Locations", locations_path %></button>
      </div>
    </div>
    <br class="superclear">
  </div>
</div>

