<div class="block">
  <div id="carousel-generic" class="carousel slide">
    <ol class="carousel-indicators hidden-xs">
      <li data-target="#carousel-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-generic" data-slide-to="1"></li>
    </ol>

    <div class="carousel-inner">
      <div class="item active">
        <img class="img-responsive img-full" src="<%= asset_path( 'paddle-bench.jpg' ) %>" />
      </div>
      <div class="item">
        <img class="img-responsive img-full" src="<%= asset_path( 'paddle-blue-player.jpg' ) %>">
      </div>
    </div>
      <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
        <i class="glyphicon glyphicon-chevron-left"></i>
      </a>
      <a class="right carousel-control" href="#carousel-generic" data-slide="next">
         <i class="glyphicon glyphicon-chevron-right"></i>
      </a>
    </div>
  </div>
  <div class="overlay text-center box">
    <h1>Paddle</h1>
  </div>
</div>

<br>
<br>
<br>

<div class="container hidden-xs hidden-sm">
  <div class="text-center features">
    <div class="col-centered">
      <div class="clip-path right">
        <div class="content">
          <i class='glyphicon glyphicon-knight'></i>
          <br>
          <br>
          <hr>
          <%= link_to "Draws", tournament_path(1) %>
          <hr>
        </div>
      </div>
      <div class="clip-path lr">
        <div class="content">
          <i class='glyphicon glyphicon-user'></i>
          <br>
          <br>
          <hr class="white">
          <%= link_to "Players", players_path, :class => "white" %>
          <hr class="white">
        </div>
      </div>
      <div class="clip-path left">
        <div class="content">
          <i class='glyphicon glyphicon-globe'></i>
          <br>
          <br>
          <hr>
          <%= link_to "Locations", locations_path %>
          <hr>
        </div>
      </div>
      <br class="superclear">
    </div>
  </div>
</div>


<div class="text-center features">
  <div class="visible-xs visible-sm">
    <div class="clip-path-vert bottom">
      <div class="content">
        <hr>
        <%= link_to "Draws", tournament_path(1), class: "bigger"%>
        <hr>
      </div>
    </div>
    <div class="clip-path-vert tb">
      <div class="content">
        <br>
        <br>
        <hr class="white">
        <%= link_to "Players", players_path, class: "white bigger" %>
        <hr class="white">
      </div>
    </div>
    <div class="clip-path-vert top">
      <div class="content">
        <hr>
        <%= link_to "Locations", locations_path, class: "bigger" %>
        <hr>
      </div>
    </div>
    <br class="superclear">
  </div>
</div>
